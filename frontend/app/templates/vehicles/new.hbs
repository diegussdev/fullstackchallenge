<div class="container d-flex py-4 justify-content-between align-items-center">
  {{#link-to 'vehicles.index' tagName='button' class='btn' }}
    <i class="fa-solid fa-angle-left"></i>
    Back
  {{/link-to}}
  <h3>New</h3>
</div>

<div class="container">
    <form class="d-flex flex-column ">
        <div class="mb-3 m-auto" style="height: 150px; overflow: hidden;">
            <img src="{{ model.image }}" alt="{{ model.name }}" style="height: 150px;">
        </div>
        <div class="mb-3">
            <label class="form-label">Image</label>
            {{ input type="text" value=model.image class='form-control' }}
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            {{ input type="text" value=model.name class='form-control' }}
        </div>
        <div class="mb-3">
            <label class="form-label">License plate</label>
            {{ input type="text" value=model.license_plate class='form-control' }}
        </div>
        <div class="mb-3">
            <label class="form-label">Brand</label>
            {{ input type="text" value=model.brand class='form-control' }}
        </div>
        <div class="mb-3">
            <label class="form-label">Model</label>
            {{ input type="text" value=model.model class='form-control' }}
        </div>
        <div class="mb-3">
            <label class="form-label">Version</label>
            {{ input type="text" value=model.version class='form-control' }}
        </div>
        <div class="mb-3">
            <label class="form-label">Year</label>
            {{ input type="number" min="1000" max="9999" value=model.year class='form-control' }}
        </div>
        <div class="mb-3 gap-2 d-flex justify-content-end">
            <button class="btn btn-danger ml-2" {{ action 'cancel' }} >
                <i class="fa-solid fa-ban"></i>
                Cancel
            </button>
            <button class="btn btn-primary ml-2" {{ action 'save' }} >
                <i class="fa-solid fa-floppy-disk"></i>
                Save
            </button>
        </div>
    </form>
</div>
